<div class="relative bg-white">
	<div class="max-w-7xl mx-auto px-4 sm:px-6">
		<div
			class="flex justify-between items-center border-b-2 border-gray-100 py-4 md:justify-start md:space-x-10"
		>
			<div class="flex justify-start lg:w-0 lg:flex-1">
				<a href="/">
					<img
						class="h-8 w-auto sm:h-10"
						src="https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg"
						alt=""
					/>
				</a>
			</div>
			<div class="lg:w-0 lg:flex-1 text-center capitalize font-bold text-2xl">
        Music videos for studying
			</div>
			<div class="hidden md:flex items-center justify-end md:flex-1 lg:w-0">
				<a
					href="/sign_in"
					class="whitespace-nowrap text-base font-medium text-gray-500 hover:text-gray-900"
				>
					Sign in
				</a>
				<a
					href="/sign_up"
					class="ml-8 whitespace-nowrap inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700"
				>
					Sign up
				</a>
			</div>
		</div>

		<div class="px-4 py-6 sm:px-0">
      <% @videos.each do |video| %>
        <div class="bg-white shadow overflow-hidden sm:rounded-lg flex mb-8 max-h-96">
          <iframe class="w-full aspect-video md:aspect-square" src="https://www.youtube.com/embed/<%= video.uid %>"></iframe>

          <dir>
            <div class="px-4 py-5 sm:px-6">
              <p class="mt-1 max-w-2xl text-sm text-gray-500">
                Video Title
              </p>
              <h3 class="text-lg leading-6 font-medium text-gray-900">
                <%= video.title %>
              </h3>
            </div>
            <div class="border-t border-gray-200">
              <dl>
                <div
                  class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6"
                >
                  <dt class="text-sm font-medium text-gray-500">
                    Description
                  </dt>
                  <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                    <%= video.desc %>
                  </dd>
                </div>
                <div
                  class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6"
                >
                  <dt class="text-sm font-medium text-gray-500">Up Votes</dt>
                  <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                    <%= video.upvotes %>
                  </dd>
                </div>
                <div
                  class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6"
                >
                  <dt class="text-sm font-medium text-gray-500">
                    Down Votes
                  </dt>
                  <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                    <%= video.downvotes %>
                  </dd>
                </div>
              </dl>
            </div>
          </dir>
        </div>
      <% end %>
		</div>
	</div>
</div>
